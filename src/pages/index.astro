---
import Layout from "../layouts/Layout.astro";
import { getBlogs } from "../libs/microcms";
import type { GetStaticPathsOptions } from "astro";

//MicroCMSの呼び出し
const response = await getBlogs({});

//pagination
const perPage = 2;
const totalPage = Math.ceil(response.totalCount / perPage);
const paths = Array.from({ length: totalPage }).map((_, i) => ({
  params: { page: String(i + 1) },
}));
console.log(paths)
---

<Layout title="Astro Blog">
  <main>
    <h1>Minolog</h1>
    <ul>
      {
        response.contents.map((blog: any) => (
          <li class="pageList">
            <a class="pageList__link" href={blog.id}>
              {blog.title}
            </a>
          </li>
        ))
      }
    </ul>
    <!--現在のページから次のページへのリンク -->
    <a href={String(Number(paths[0].params.page) + 1)}>次のページ</a>
    
    <!--ページネーション-->
    <div>
      <ul>
        {
          paths.map((path) => (
            <li>
              <a href={path.params.page}>{path.params.page}</a>
            </li>
          ))
        }
      </ul>
  </main>
</Layout>

<style>
  body {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    color: #c88e8e;
    line-height: 1.6;
    height: 100vh;
    margin: 0;
    padding: 0;
    margin-top: 70px;
  }

  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
    background-color: #dbdbdb;
    box-shadow: 0 7px 7px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
  }

  h1 {
    font-size: 2.5em;
    color: #334257;
    text-align: center;
  }

  ul {
    padding: 0;
    list-style-type: none;
  }

  li {
    margin-bottom: 10px;
  }

  .pageList__link {
    color: #6884bd;
    text-decoration: none;
    font-weight: 600;
  }

  a:hover {
    color: #25603a;
    text-decoration: underline;
  }
</style>
